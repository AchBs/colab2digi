{
  "manifest_version": 3,
  "name": "Digimon Colab Mode",
  "version": "1.0",
  "description": "Replace Google Colab animals with Digimon sprites",
    "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Digimon Colab Mode"
  },
  "content_scripts": [
    {
      "matches": ["https://colab.research.google.com/*"],
      "css": ["digimon-style.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*.gif"
      ],
      "matches": ["https://colab.research.google.com/*"]
    }
  ],
  "permissions": ["storage"]
}